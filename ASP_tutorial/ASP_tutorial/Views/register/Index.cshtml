
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class="container" style="margin-top: 10%;">
    <div class="row d-flex align-items-center justify-content-center">
        <div class="col-12 col-sm-10 col-md-5 col-lg-5 col-xl-5">
            <h3 class="text-center">Kayıt Ol</h3>
            <form id="loginForm">
                <div class="form-group mb-2">
                    <label>İsim</label>
                    <input type="text" class="form-control" id="name" placeholder="İsim">
                </div>
                <div class="form-group mb-2">
                    <label>Soyisim</label>
                    <input type="text" class="form-control" id="lastname" placeholder="Soyisim">
                </div>
                <div class="form-group mb-2">
                    <label>Email adresi</label>
                    <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Email">
                </div>
                <div class="form-group mb-2">
                    <label>Şifre</label>
                    <input type="password" class="form-control" id="password" placeholder="Şifre">
                </div>
                <div class="form-group mb-2">
                    <label>Şifre Tekrarı</label>
                    <input type="password" class="form-control" id="password-confirm" placeholder="Şifre">
                </div><hr />
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                    <a class="float-end mt-1" style="cursor:pointer;text-decoration:none" onclick="girişYap()">Giriş Yap</a>
                </div>
            </form>
        </div>
    </div>
</div>